<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/income_text"
        android:text="@string/income"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp">
    </TextView>

    <TextView
        android:id="@+id/rent_text"
        android:text="@string/rent"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/income_text"
        android:layout_marginTop="56dp"
        android:layout_marginStart="2dp">
    </TextView>

    <TextView
        android:id="@+id/bills_text"
        android:text="@string/bills"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rent_text"
        android:layout_marginTop="14dp"
        android:layout_marginStart="2dp">
    </TextView>

    <TextView
        android:id="@+id/misc_text"
        android:text="@string/misc"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bills_text"
        android:layout_marginTop="14dp"
        android:layout_marginStart="2dp">
    </TextView>

    <TextView
        android:id="@+id/total_text"
        android:text="@string/total"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/misc_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="2dp">
    </TextView>

    <TextView
        android:id="@+id/purchase_text"
        android:text="@string/item_cost"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/total_text"
        android:layout_marginTop="12dp"
        android:layout_marginStart="2dp">
    </TextView>

    <TextView
        android:id="@+id/actual_total_text"
        android:text="@string/actual_cost"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/purchase_cost"
        android:layout_marginTop="4dp"
        android:layout_marginStart="2dp">
    </TextView>

    <EditText
        android:id="@+id/income_edit"
        android:layout_width="80dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"
        android:autofillHints="0"
        android:textCursorDrawable="@drawable/cursor"
        android:paddingStart="5dp"
        android:background="@drawable/edit_box"/>

    <EditText
        android:id="@+id/rent_edit"
        android:layout_width="80dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/income_edit"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="48dp"
        android:autofillHints="0"
        android:textCursorDrawable="@drawable/cursor"
        android:paddingStart="5dp"
        android:background="@drawable/edit_box"/>

    <EditText
        android:id="@+id/bills_edit"
        android:layout_width="80dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/rent_edit"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"
        android:autofillHints="0"
        android:textCursorDrawable="@drawable/cursor"
        android:paddingStart="5dp"
        android:background="@drawable/edit_box"/>

    <EditText
        android:id="@+id/misc_edit"
        android:layout_width="80dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/bills_edit"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"
        android:autofillHints="0"
        android:textCursorDrawable="@drawable/cursor"
        android:paddingStart="5dp"
        android:background="@drawable/edit_box"/>

    <TextView
        android:id="@+id/total_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/misc_edit"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/purchase_cost"
        android:layout_width="80dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/total_edit"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="numberDecimal"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="8dp"
        android:autofillHints="0"
        android:textCursorDrawable="@drawable/cursor"
        android:paddingStart="5dp"
        android:background="@drawable/edit_box"/>

    <TextView
        android:id="@+id/actual_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/purchase_cost"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>